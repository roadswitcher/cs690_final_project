# Root indicator for EditorConfig
root = true

# Global settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# specific rules
[*.cs]
# Code style preferences
dotnet_style_qualification_for_field = true:suggestion
dotnet_style_qualification_for_property = true:suggestion
dotnet_style_qualification_for_method = true:suggestion

# Naming conventions
dotnet_naming_rule.private_members.style = camel_case
dotnet_naming_rule.private_members.symbols = private_fields
dotnet_naming_rule.private_members.severity = warning

# Formatting
csharp_new_line_before_open_brace = all
csharp_space_after_cast = false
csharp_indent_switch_labels = true

# Nullability and safety
nullable = enable

# Spectre.Console specific conventions
# Align method chains for improved readability
csharp_preserve_single_line_statements = false
csharp_indent_block_contents = true

# Enforce readability for CLI output methods
dotnet_diagnostic.IDE0071.severity = suggestion  # Suggest `string interpolation` for cleaner output

# Code analysis
dotnet_diagnostic.CA1822.severity = warning       # Mark static methods as static
dotnet_diagnostic.CA2208.severity = error         # Correct argument exceptions
dotnet_diagnostic.CA1303.severity = warning       # Avoid hardcoded strings in console output
